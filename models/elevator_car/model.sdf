<?xml version="1.0"?>
<sdf version="1.7">
  <model name="elevator_car">
    <static>false</static>
    <pose>0 0 0 0 0 0</pose>
    
    <!-- Main Platform -->
    <link name="platform">
      <pose>0 0 0.05 0 0 0</pose>
      <inertial>
        <mass>500</mass>
        <inertia>
          <ixx>166.67</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>208.33</iyy>
          <iyz>0</iyz>
          <izz>375</izz>
        </inertia>
      </inertial>
      <collision name="platform_collision">
        <geometry>
          <box>
            <size>2.0 1.5 0.1</size>
          </box>
        </geometry>
      </collision>
      <visual name="platform_visual">
        <geometry>
          <box>
            <size>2.0 1.5 0.1</size>
          </box>
        </geometry>
        <material>
          <ambient>0.5 0.5 0.5 1</ambient>
          <diffuse>0.7 0.7 0.7 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </visual>
    </link>

    <!-- Back Wall -->
    <link name="back_wall">
      <pose>-0.95 0 1.3 0 0 0</pose>
      <inertial>
        <mass>50</mass>
        <inertia>
          <ixx>20.83</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.83</iyy>
          <iyz>0</iyz>
          <izz>20</izz>
        </inertia>
      </inertial>
      <collision name="back_wall_collision">
        <geometry>
          <box>
            <size>0.1 1.5 2.5</size>
          </box>
        </geometry>
      </collision>
      <visual name="back_wall_visual">
        <geometry>
          <box>
            <size>0.1 1.5 2.5</size>
          </box>
        </geometry>
        <material>
          <ambient>0.8 0.8 0.9 1</ambient>
          <diffuse>0.9 0.9 1.0 1</diffuse>
          <specular>0.3 0.3 0.3 1</specular>
        </material>
      </visual>
    </link>

    <!-- Left Wall -->
    <link name="left_wall">
      <pose>0 -0.7 1.3 0 0 0</pose>
      <inertial>
        <mass>50</mass>
        <inertia>
          <ixx>0.83</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>21.67</iyy>
          <iyz>0</iyz>
          <izz>20.83</izz>
        </inertia>
      </inertial>
      <collision name="left_wall_collision">
        <geometry>
          <box>
            <size>2.0 0.1 2.5</size>
          </box>
        </geometry>
      </collision>
      <visual name="left_wall_visual">
        <geometry>
          <box>
            <size>2.0 0.1 2.5</size>
          </box>
        </geometry>
        <material>
          <ambient>0.8 0.8 0.9 1</ambient>
          <diffuse>0.9 0.9 1.0 1</diffuse>
          <specular>0.3 0.3 0.3 1</specular>
        </material>
      </visual>
    </link>

    <!-- Right Wall -->
    <link name="right_wall">
      <pose>0 0.7 1.3 0 0 0</pose>
      <inertial>
        <mass>50</mass>
        <inertia>
          <ixx>0.83</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>21.67</iyy>
          <iyz>0</iyz>
          <izz>20.83</izz>
        </inertia>
      </inertial>
      <collision name="right_wall_collision">
        <geometry>
          <box>
            <size>2.0 0.1 2.5</size>
          </box>
        </geometry>
      </collision>
      <visual name="right_wall_visual">
        <geometry>
          <box>
            <size>2.0 0.1 2.5</size>
          </box>
        </geometry>
        <material>
          <ambient>0.8 0.8 0.9 1</ambient>
          <diffuse>0.9 0.9 1.0 1</diffuse>
          <specular>0.3 0.3 0.3 1</specular>
        </material>
      </visual>
    </link>

     <!-- Left Door -->
    <link name="door_left">
      <pose>0.4 0 1.3 0 0 0</pose>
      <inertial>
        <mass>30</mass>
        <inertia>
          <ixx>15.625</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.3</iyy>
          <iyz>0</iyz>
          <izz>15.325</izz>
        </inertia>
      </inertial>
      <collision name="door_left_collision">
        <geometry>
          <box>
            <size>0.1 0.6 2.5</size>
          </box>
        </geometry>
      </collision>
      <visual name="door_left_visual">
        <geometry>
          <box>
            <size>0.1 0.6 2.5</size>
          </box>
        </geometry>
        <material>
          <ambient>0.7 0.7 0.8 1</ambient>
          <diffuse>0.8 0.8 0.9 1</diffuse>
          <specular>0.4 0.4 0.4 1</specular>
        </material>
      </visual>
    </link>

    <!-- Right Door -->
    <link name="door_right">
      <pose>0.4 0 1.3 0 0 0</pose>
      <inertial>
        <mass>30</mass>
        <inertia>
          <ixx>15.625</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.3</iyy>
          <iyz>0</iyz>
          <izz>15.325</izz>
        </inertia>
      </inertial>
      <collision name="door_right_collision">
        <geometry>
          <box>
            <size>0.1 0.6 2.5</size>
          </box>
        </geometry>
      </collision>
      <visual name="door_right_visual">
        <geometry>
          <box>
            <size>0.1 0.6 2.5</size>
          </box>
        </geometry>
        <material>
          <ambient>0.7 0.7 0.8 1</ambient>
          <diffuse>0.8 0.8 0.9 1</diffuse>
          <specular>0.4 0.4 0.4 1</specular>
        </material>
      </visual>
    </link>

    <!-- Floor Display -->
    <link name="floor_display">
      <pose>-0.8 0 2.0 0 0 0</pose>
      <inertial>
        <mass>1</mass>
        <inertia>
          <ixx>0.01</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.01</iyy>
          <iyz>0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
      <collision name="display_collision">
        <geometry>
          <box>
            <size>0.05 0.3 0.2</size>
          </box>
        </geometry>
      </collision>
      <visual name="display_visual">
        <geometry>
          <box>
            <size>0.05 0.3 0.2</size>
          </box>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.8 0.8 0.8 1</specular>
        </material>
      </visual>
    </link>

    <!-- Floor Number Text -->
    <link name="floor_number">
      <pose>-0.75 0 2.0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.001</iyy>
          <iyz>0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <visual name="floor_number_visual">
        <geometry>
          <box>
            <size>0.01 0.25 0.15</size>
          </box>
        </geometry>
        <material>
          <ambient>0 1 0 1</ambient>
          <diffuse>0 1 0 1</diffuse>
          <specular>0.5 0.5 0.5 1</specular>
        </material>
      </visual>
    </link>

    <!-- Joints -->
    
    <!-- Platform joints to walls -->
    <joint name="platform_to_back_wall" type="fixed">
      <parent>platform</parent>
      <child>back_wall</child>
    </joint>

    <joint name="platform_to_left_wall" type="fixed">
      <parent>platform</parent>
      <child>left_wall</child>
    </joint>

    <joint name="platform_to_right_wall" type="fixed">
      <parent>platform</parent>
      <child>right_wall</child>
    </joint>

    <!-- Door joints (prismatic for sliding) -->
    <joint name="left_door_joint" type="prismatic">
      <parent>platform</parent>
      <child>door_left</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-0.6</lower>
          <upper>0</upper>
          <effort>1000</effort>
          <velocity>0.5</velocity>
        </limit>
      </axis>
    </joint>

    <joint name="right_door_joint" type="prismatic">
      <parent>platform</parent>
      <child>door_right</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>0</lower>
          <upper>0.6</upper>
          <effort>1000</effort>
          <velocity>0.5</velocity>
        </limit>
      </axis>
    </joint>

    <!-- Display joints -->
    <joint name="platform_to_display" type="fixed">
      <parent>platform</parent>
      <child>floor_display</child>
    </joint>

    <joint name="display_to_number" type="fixed">
      <parent>floor_display</parent>
      <child>floor_number</child>
    </joint>
    <!-- Plugin placeholder (will be added by launch file) -->
    <plugin name="elevator_controller" filename="libelevator_controller.so">
      <elevator_id>1</elevator_id>
    </plugin>
    
  </model>
</sdf>